<Window x:Class="FitnessMealTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessMealTracker"
        mc:Ignorable="d"
        Title="Fitness Meal Tracker" Height="1070" Width="1429"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Color Scheme -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextColor" Color="#212121"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF74FF00" Offset="1"/>
                    <GradientStop Color="#FF387C00" Offset="0"/>
                    <GradientStop Color="#FE387C00" Offset="0.328"/>
                </RadialGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <TextBlock Text="🍎 Fitness Meal Tracker" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Meals and Food Items -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Meals Section -->
                <TextBlock Grid.Row="0" Text="📋 Meals" FontSize="20" FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}" Margin="0,0,0,10"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Meals}" 
                         SelectedItem="{Binding SelectedMeal}"
                         DisplayMemberPath="Name"
                         Margin="0,0,0,10">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Add Meal Section -->
                <GroupBox Grid.Row="2" Header="➕ Add New Meal" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBox Text="{Binding NewMealName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,5" Padding="8"/>
                        <Button Content="Add Meal" Command="{Binding AddMealCommand}" 
                                Margin="0,8,0,5" Background="{StaticResource PrimaryColor}"/>
                        <Button Content="Remove Selected Meal" Command="{Binding RemoveMealCommand}" 
                                Margin="0,5" Background="#F44336"/>
                    </StackPanel>
                </GroupBox>

                <!-- Food Items Section -->
                <GroupBox Grid.Row="3" Header="🍽️ Food Items">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListBox Grid.Row="0" ItemsSource="{Binding SelectedMealFoodItems}" 
                                 SelectedItem="{Binding SelectedFoodItem}"
                                 Margin="0,0,0,10">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock FontSize="12" Margin="0,4,0,0">
                                            <Run Text="🔥 Calories: " Foreground="#FF5722"/>
                                            <Run Text="{Binding Calories, StringFormat=F1}"/>
                                            <Run Text=" | 💪 Protein: " Foreground="#2196F3"/>
                                            <Run Text="{Binding Protein, StringFormat=F1}"/>
                                            <Run Text="g | 🍞 Carbs: " Foreground="#FF9800"/>
                                            <Run Text="{Binding Carbs, StringFormat=F1}"/>
                                            <Run Text="g | 🧈 Fat: " Foreground="#9C27B0"/>
                                            <Run Text="{Binding Fat, StringFormat=F1}"/>
                                            <Run Text="g"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <GroupBox Grid.Row="1" Header="➕ Add Food Item">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0" Grid.ColumnSpan="2" 
                                         Text="{Binding NewFoodItemName, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5" Padding="8" 
                                         Tag="Food Name" TextChanged="TextBox_TextChanged"/>

                                <TextBox Grid.Row="1" Grid.Column="0" 
                                         Text="{Binding NewFoodItemCalories, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,5,5" Padding="8" 
                                         Tag="Calories"/>

                                <TextBox Grid.Row="1" Grid.Column="1" 
                                         Text="{Binding NewFoodItemProtein, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="5,5,0,5" Padding="8" 
                                         Tag="Protein (g)"/>

                                <TextBox Grid.Row="2" Grid.Column="0" 
                                         Text="{Binding NewFoodItemCarbs, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,5,5,5" Padding="8" 
                                         Tag="Carbs (g)"/>

                                <TextBox Grid.Row="2" Grid.Column="1" 
                                         Text="{Binding NewFoodItemFat, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="5,5,0,5" Padding="8" 
                                         Tag="Fat (g)"/>

                                <Button Grid.Row="3" Grid.ColumnSpan="2" 
                                        Content="Add Food Item" Command="{Binding AddFoodItemCommand}" 
                                        Margin="0,8" Background="{StaticResource AccentColor}"/>

                                <Button Grid.Row="4" Grid.ColumnSpan="2" 
                                        Content="Remove Selected Food Item" Command="{Binding RemoveFoodItemCommand}" 
                                        Margin="0,5" Background="#F44336"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Right Panel: Summary -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="📊 Daily Summary" FontSize="20" FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}" Margin="0,0,0,10"/>

                <GroupBox Grid.Row="1" Header="💪 Nutrition Totals">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="🔥 Total Calories:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding TotalCalories, Mode=OneWay, StringFormat=F2}" 
                                       Margin="0,8" FontSize="14" Foreground="#FF5722" FontWeight="Bold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="💪 Total Protein:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,8" FontSize="14">
                                <Run Text="{Binding TotalProtein, Mode=OneWay, StringFormat=F2}" 
                                     Foreground="#2196F3" FontWeight="Bold"/>
                                <Run Text=" g"/>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="🍞 Total Carbs:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,8" FontSize="14">
                                <Run Text="{Binding TotalCarbs, Mode=OneWay, StringFormat=F2}" 
                                     Foreground="#FF9800" FontWeight="Bold"/>
                                <Run Text=" g"/>
                            </TextBlock>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="🧈 Total Fat:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,8" FontSize="14">
                                <Run Text="{Binding TotalFat, Mode=OneWay, StringFormat=F2}" 
                                     Foreground="#9C27B0" FontWeight="Bold"/>
                                <Run Text=" g"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="2" Header="🎯 Remaining to Goal" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="🔥 Remaining Calories:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding RemainingCalories, Mode=OneWay, StringFormat=F2}" 
                                       Margin="0,8" FontSize="14" FontWeight="Bold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="💪 Remaining Protein:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,8" FontSize="14">
                                <Run Text="{Binding RemainingProtein, Mode=OneWay, StringFormat=F2}" 
                                     FontWeight="Bold"/>
                                <Run Text=" g"/>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="🍞 Remaining Carbs:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,8" FontSize="14">
                                <Run Text="{Binding RemainingCarbs, Mode=OneWay, StringFormat=F2}" 
                                     FontWeight="Bold"/>
                                <Run Text=" g"/>
                            </TextBlock>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="🧈 Remaining Fat:" 
                                       FontWeight="Bold" Margin="0,8" FontSize="14"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,8" FontSize="14">
                                <Run Text="{Binding RemainingFat, Mode=OneWay, StringFormat=F2}" 
                                     FontWeight="Bold"/>
                                <Run Text=" g"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Footer: Save/Load Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="📥 Load Meals" Command="{Binding LoadMealsCommand}" 
                    Margin="5,0" Background="{StaticResource SecondaryColor}"/>
            <Button Content="💾 Save Meals" Command="{Binding SaveMealsCommand}" 
                    Margin="5,0" Background="{StaticResource PrimaryColor}" BorderBrush="White"/>
        </StackPanel>
    </Grid>
</Window>
